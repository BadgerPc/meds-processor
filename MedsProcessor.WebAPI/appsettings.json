{
	"Logging": {
		"LogLevel": {
			"Default": "Warning"
		}
	},

	"AllowedHosts": "*",

	"AuthToken": {
		"Secret": "a70023ce-f53f-47c4-acae-2bf37026df4f",
		"Issuer": "meds-processor",
		"Audience": "api://default",
		"ValidForSeconds": 300
	},

	"HttpRequestRateLimit": {
		"EnableEndpointRateLimiting": false,
		"StackBlockedRequests": false,
		"HttpStatusCode": 429,
		"RealIpHeader": "X-Rate-Limit-IpAddress",
		"ClientIdHeader": "X-Rate-Limit-ClientId",
		"EndpointWhitelist": [ "get:/api/error"],
		"QuotaExceededResponse": {
      "Content": "{{ \"message\": \"Http request rate limit exceeded.\", \"details\": \"Maximum allowed: {0} per {1}. Please try again in {2} second(s).\" }}",
      "ContentType": "application/json",
      "StatusCode": 429
    },
		"GeneralRules": [
			{
				"Endpoint": "*",
				"Period": "5s",
				"Limit": 5
			},
			{
				"Endpoint": "*",
				"Period": "5m",
				"Limit": 100
			}
		]
	}
}
